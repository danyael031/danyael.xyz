---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Hello!</h1>
			<p>
				Welcome. The goal of the site is to share the things I like to do.
				Here you will find topics on software development, technology, personal
				projects, FOSS, Linux and basically whatever comes to mind.
			</p>
		</main>
		<Footer />
	</body>
</html>
